---
import { Icon } from 'astro-icon/components';
import { contactInfo } from '@/content/cv/ContactInfo.ts';
---

<h2>Контактная информация</h2>

<div class='contact-info'>
    {
        contactInfo
            .filter((entry) => !entry.hidden)
            .map((entry) =>
                <div class:list={['entry', { important: entry.important }]}>
                    { entry.icon && <Icon name={ entry.icon } /> }
                    <span>
                        <span style="color: var(--secondary-color)">
                            { entry.title }:
                        </span>
                        { entry.link
                            ? <a href={ entry.link }>{ entry.value }</a>
                            : entry.value }
                    </span>
                </div>
    )}
</div>

<style>
.contact-info {
    display: grid;

    @media (width > 40em) {
        grid-template-columns: repeat(2, 1fr);
    }

    column-gap: 1em;
}

.entry {
    display: flex;
    align-items: center;
    column-gap: 0.5em;

    font-variant: lining-nums;
}

.important {
    grid-column: 1 / -1;
}

[data-icon] {
    font-size: 1.2em;
    color: var(--secondary-color);

    flex: 0 0 auto;
    flex-wrap: nowrap;
}
</style>
