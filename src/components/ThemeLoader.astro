<script is:inline>
const root = document.documentElement;
const preferDarkTheme = window.matchMedia('(prefers-color-scheme: dark)');
let themeOverrideEnabled = Boolean(localStorage.getItem('theme'));

root.setAttribute('data-theme', getCurrentTheme());

function getCurrentTheme() {
    return themeOverrideEnabled ? localStorage.getItem('theme') : 'auto'
}

function getPreferredColorScheme(darkThemeMatcher) {
    return darkThemeMatcher.matches ? 'dark' : 'light';
}

function setTheme(theme) {
    localStorage.setItem('theme', theme);
    root.setAttribute('data-theme', theme);
}

function toggleTheme() {
    const currentTheme = getCurrentTheme();
    const theme = currentTheme === 'auto' ? getPreferredColorScheme(preferDarkTheme) : currentTheme;
    const nextTheme = theme === 'dark' ? 'light' : 'dark';
    setTheme(nextTheme);
}
</script>

