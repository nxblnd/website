<style is:global>
a {
    text-decoration: none;
}

a:link {
    color: var(--link-color);
}

a:visited {
    color: var(--link-visited-color);
}

a:focus {
    color: var(--link-focus-color);
    outline: 1px solid;
    outline-offset: 0.1em;
    border-radius: 0.1em;
}

a:hover {
    color: var(--link-focus-color);
}

a:active {
    color: var(--link-active-color);
}

@media print {
    a[href^=http]::after {
        content: " (" attr(href) ")";
        font-style: italic;
    }
}
</style>

