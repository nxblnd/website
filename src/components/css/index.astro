---
import Colors from "./colors.astro";
import Sizes from "./sizes.astro";
import Reset from "./reset.astro";
import Links from "./links.astro";
import Headers from "./headers.astro";
---

<Colors />
<Sizes />
<Reset />
<Links />
<Headers />

<style is:global>
    body {
        height: fit-content;
        background-color: var(--bg-color);
        color: var(--primary-color);
        font-family: var(--font-sans-serif);
        font-size: clamp(calc(var(--font-size) - 3px), 3vw, var(--font-size));
        line-height: 1.45;
    }

    @media print {
        @page {
            margin: 1.5cm;
            size: a4;
        }

        .no-print {
            display: none !important;
        }

        body {
            font-size: var(--font-size);
            line-height: 1.25;
        }
    }
</style>
