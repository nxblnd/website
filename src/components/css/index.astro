---
import Colors from "./colors.astro";
import Sizes from "./sizes.astro";
import Reset from "./reset.astro";
import Links from "./links.astro";
import Headers from "./headers.astro";
---

<Colors />
<Sizes />
<Reset />
<Links />
<Headers />

<style is:global>
html, body {
    height: 100%;
}

body {
    color: var(--primary-color);
    background-color: var(--bg-color);

    font-family: var(--font-sans-serif);
    font-size: clamp(calc(var(--font-size) - 3px), 3vw, var(--font-size));

    line-height: 1.45;
}

@media print {
    @page {
        size: A4;
        margin: 1.5cm;
    }

    .no-print {
        display: none !important;
    }

    font-size: var(--font-size);

    line-height: 1.25;
}

</style>

