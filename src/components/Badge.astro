---
import { Icon } from "astro-icon/components";

interface Props {
    color?: string;
    icon?: string;
    iconColor?: string;
    iconFontColor?: string;
}

const { icon, color, iconColor, iconFontColor } = Astro.props;
---

<div class="badge">
    {
        icon && (
            <div class="icon">
                <Icon name={icon} />
            </div>
        )
    }
    <div class="content">
        <slot />
    </div>
</div>

<style
    define:vars={{
        color,
        "icon-color": iconColor,
        "icon-font-color": iconFontColor,
    }}
>
    .badge {
        display: flex;
        align-items: center;
        border-radius: 1lh;
        background-color: var(--color);
    }

    .icon {
        padding: 0.25em;
        padding: var(--space-sm);
        border-radius: 1lh;
        background-color: var(--icon-color);

        [data-icon] {
            color: var(--icon-font-color);
        }
    }

    .content:first-child {
        padding-inline: var(--space-sm);
    }

    .content:not(:first-child) {
        padding-inline: var(--space-xs) var(--space-sm);
    }
</style>
