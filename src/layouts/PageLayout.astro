---
import BaseLayout from "./BaseLayout.astro"
import HeaderBar from '@/components/HeaderBar.astro'
import FooterBar from "@/components/FooterBar.astro"

interface Props {
    pageTitle: string,
}

const { pageTitle } = Astro.props;
---

<BaseLayout pageTitle={ pageTitle }>
    <HeaderBar />
    <main>
        <slot />
    </main>
    <FooterBar />
</BaseLayout>

<style>
main {
    display: grid;
    grid-auto-rows: min-content;
    grid-template-columns: var(--grid-template-columns);
    column-gap: var(--grid-column-gap);

    margin-block: var(--main-content-block-margin);
}

:global(main > *) {
    grid-column: content;
}

:global(main > .wide-content) {
    grid-column: wide-content;
}

:global(main > .fullwidth) {
    grid-column: fullwidth;
}
</style>

