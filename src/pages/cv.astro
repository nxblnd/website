---
import PageLayout from "@/layouts/PageLayout.astro";
import { personalInfo } from "@/content/cv/info.ts";
import ContactInfo from "@/components/cv/ContactInfo.astro";
import { Content as AboutContent } from "@/content/cv/about.md";
import JobsInfo from "@/components/cv/JobsInfo.astro";
import EducationInfo from "@/components/cv/EducationInfo.astro";
import { Content as SkillsContent } from "@/content/cv/skills.md";
import ToolBox from "@/components/cv/ToolBox.astro";
---

<PageLayout title="Резюме" description="Резюме фронтенд-разработчика">
    <hgroup>
        <h1>
            {personalInfo.name.lastName}
            {personalInfo.name.firstName}
            {personalInfo.name.patronym}
        </h1>
        <p>{personalInfo.position}</p>
    </hgroup>

    <ContactInfo />

    <h2>Кратко обо мне</h2>

    <AboutContent />

    <JobsInfo />

    <EducationInfo />

    <h2>Навыки</h2>

    <SkillsContent />

    <ToolBox />
</PageLayout>

<style>
    hgroup {
        line-height: 1.25;
        margin-block: 5vmin 1em;
        text-align: center;
        text-decoration: none;

        @media print {
            margin-block: 1em;
        }
    }

    :global(h2) {
        display: flex;
        align-items: baseline;
        gap: 0.5em;
    }

    :global(h2)::after {
        display: block;
        width: 100%;
        height: 1px;
        flex: 1;
        background-color: var(--secondary-color);
        content: "";

        @media print {
            print-color-adjust: exact;
        }
    }
</style>
