{
  "name": "site",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "prepare": "husky",
    "dev": "npm run astro:dev",
    "check": "npm run astro:check && npm run prettier:check && npm run eslint:check && npm run stylelint:check",
    "fix": "npm run prettier:write && npm run eslint:fix && npm run stylelint:fix",
    "test": "echo 'no tests'",
    "build": "npm run astro:build",
    "astro": "astro",
    "astro:dev": "astro dev",
    "astro:build": "astro build",
    "astro:preview": "astro preview",
    "astro:check": "astro check",
    "eslint:check": "eslint .",
    "eslint:fix": "eslint . --fix",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "stylelint:check": "stylelint \"**/*.{css,astro}\" --ignore-path .gitignore",
    "stylelint:fix": "stylelint \"**/*.{css,astro}\" --ignore-path .gitignore --fix",
    "playwright:pdfgen": "playwright test pdfGen.spec.ts"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.5.1",
    "@iconify-json/mdi": "^1.2.3",
    "@iconify-json/noto-v1": "^1.2.5",
    "astro": "^5.10.1",
    "astro-compressor": "^1.1.2",
    "astro-icon": "^1.1.5",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "postcss-html": "^1.8.0",
    "postcss-preset-env": "^10.3.1",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.2.1",
    "eslint": "^9.35.0",
    "eslint-plugin-astro": "^1.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "stylelint": "^16.24.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-idiomatic-order": "^10.0.0",
    "stylelint-config-standard": "^39.0.0",
    "stylelint-order": "^7.0.0",
    "typescript-eslint": "^8.43.0"
  }
}
